{
  "compilerOptions": {
    "target": "ES5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./bundles",
    "noEmit": false
  },
  
  "lib": [
    "dom",
    "dom.iterable",
    "es2015",
    "scripthost"
  ],
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "angularCompilerOptions": {
   "genDir": "./bundles"
 }
}